<?xml version="1.0" encoding="UTF-8"?>
<ccxml version="1.0">

  <eventprocessor>  
    <transition event="ccxml.loaded" name="event">
      <fetch next="'file:ccxmlTests/helloWorld.xml'" fetchid="helloWorld" synch="syn" />
      
      <log expr="fetching hello world"/>
	 
    </transition>
	
	<transition event="fetch.done" name="event">
		<log expr="about to goto hello world"/>
	 	
	  <goto fetchid="helloWorld"/>  
	</transition> 
	
	<transition event="error.*" name="evt">
      	<log expr=" error here! "/>
	  <exit/>
	</transition> 
  
  </eventprocessor>
</ccxml>

  