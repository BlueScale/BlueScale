<?xml version="1.0" encoding="UTF-8"?>
<ccxml version="1.0" xmlns="http://www.w3.org/2002/09/ccxml">
  
  <var name="testvar" expr="4+5" />
  
  var name="modvar" expr="testvar + 'hi'" /> 
  
  <var name="currstate" expr="'blah'" />
  
  <eventprocessor  statevariable="currstate">
  
   		<transition event="ccxml.loaded">
                   <log expr="hello World"/>
                   <assign name="currstate" expr="'alert_ready'" />
       	</transition>
        
    	<transition event="connection.alerting"  state="'alert_not_ready'">
       		<log expr="state stuff DIDN'T worked"/>
     
    	</transition>
        	
    	<transition event="connection.alerting" state="'alert_ready'">
       		<log expr="state stuff worked"/>
     
    	</transition>
     
  </eventprocessor>
</ccxml>